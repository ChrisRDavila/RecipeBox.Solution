<div  id="header" class="header">
  <h1>@Html.ActionLink("Recipe Box", "Index", "Home")</h1>
  <div>
    @using (Html.BeginForm("Index", "Search", FormMethod.Get))
    {
      <input id="s-bar" type="text" name="query" placeholder="Search" />
      <input id="s-button" type="submit" value="Search" />
    }
    <div>
      @if (User.Identity.IsAuthenticated)
      {
        <br />
        <p>
          Welcome, <span style= "color: #33dCFF" >@User.Identity.Name</span>!<br />
          @Html.ActionLink("Manage Account", "Index", "Account")
        </p>
      }
      else
      {<p>@Html.ActionLink("Log In / Register", "Index", "Account")</p>}
    </div>
  </div>
</div>
<br /><br />