@{
  Layout = "_Layout";
}

@using RecipeBox.Models;

<h2>@ViewBag.PageTitle</h2>

@if (@Model.Count == 0)
{
  <p>No categories have been added yet.</p>
}

@foreach (Category cgt in Model)
{
  <li>@Html.ActionLink($"{cgt.Type}", "Details", new { id = cgt.CategoryId })</li>
}

<button>@Html.ActionLink("Add New Category", "Create")</button>
<button>@Html.ActionLink("Home", "Index", "Home")</button>