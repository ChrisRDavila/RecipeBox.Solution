@{
  Layout = "_Layout";
}

@model RecipeBox.Models.Category

<h4>Add a new item</h4>

<p>@Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Type)
  @Html.TextBoxFor(model => model.Type)

  @Html.LabelFor(model => model.Protein)
  @Html.TextBoxFor(model => model.Protein)

  @Html.LabelFor(model => model.CookMethod)
  @Html.TextBoxFor(model => model.CookMethod)

  <input type="submit" value="Add new item" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all Categories", "Index")</p>