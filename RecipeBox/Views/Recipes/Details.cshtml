@{
  Layout = "_Layout";
}

@using RecipeBox.Models
@model RecipeBox.Models.Recipe

<h2>Recipe Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>
<h3>@Html.DisplayNameFor(model => model.Description): @Html.DisplayFor(model => model.Description)</h3>
<h3>@Html.DisplayNameFor(model => model.Rating): @Html.DisplayFor(model => model.Rating)</h3>  
<h3>@Html.DisplayNameFor(model => model.Ingredients): @Html.DisplayFor(model => model.Ingredients)</h3>  
<h3>@Html.DisplayNameFor(model => model.Directions): @Html.DisplayFor(model => model.Directions)</h3>  
<h3>@Html.DisplayNameFor(model => model.CookTime): @Html.DisplayFor(model => model.CookTime)</h3>  
<h3>@Html.DisplayNameFor(model => model.ServingSize): @Html.DisplayFor(model => model.ServingSize)</h3>  
<h3>@Html.DisplayNameFor(model => model.UrlLink): <a href=@Model.UrlLink>@Model.UrlLink</a></h3>  

@if(@Model.JoinEntities.Count == 0)
{
  <p>This item does not have any categories yet!</p>
}
else
{
  <h4>This recipe has the following category tags:</h4>
  <ul>
    @foreach(CategoryRecipe join in Model.JoinEntities)
    {
      <li>Category: @join.Category.Type</li>
      @using (Html.BeginForm("DeleteRecipeLink", "Recipes", "www"))
      {
        @Html.Hidden("categoryRecipeId", @join.CategoryRecipeId)
        <input type="submit" value="Delete"/>
      }
    }
  </ul>
}

@if (User.Identity.IsAuthenticated)
{
  <p>@Html.ActionLink("Back to List", "Index")</p>
}
else
{
  <p>@Html.ActionLink("Back Home", "Index", "Home")</p> 
}
<p>@Html.ActionLink("Edit Recipe", "Edit", new { id = Model.RecipeId })</p>
<p>@Html.ActionLink("Add a Category", "AddCategory", new { id = Model.RecipeId })</p>
<p>@Html.ActionLink("Delete Recipe", "Delete", new { id = Model.RecipeId })</p>