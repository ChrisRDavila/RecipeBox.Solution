@{
  Layout = "_Layout";
  string bootstrapStarSVG = @"<svg xmlns=""http://www.w3.org/2000/svg"" width=""30"" height=""30"" fill=""currentColor""
class=""bi bi-star-fill""
viewBox=""0 0 16 16"">
<path
d=""M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173
6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327
4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"" />
</svg>";
}

@model RecipeBox.Models.Recipe

<h4>Add a new recipe</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  <br />

  @Html.LabelFor(model => model.Description)
  @Html.TextBoxFor(model => model.Description)
  <br />

  @Html.LabelFor(model => model.Rating)
  <br />
  @Html.ValidationMessageFor(model => model.Rating, "", new { @class = "text-danger" })
  <br />
  <div class="recipe-rating">
  @for (int i = 10; i >= 1; i--)
    {
      @Html.RadioButtonFor(model => model.Rating, i, new { id = $"createRecipeRate {i}" })
      <label for="createRecipeRate @(i)">
        @Html.Raw(bootstrapStarSVG)
      </label>
    }
  </div>
  <br />
  <br />
  <br />


  @Html.LabelFor(model => model.Ingredients)
  @Html.TextAreaFor(model => model.Ingredients)
  <br />

  @Html.LabelFor(model => model.Directions)
  @Html.TextAreaFor(model => model.Directions)
  <br />

  @Html.LabelFor(model => model.CookTime)
  @Html.TextBoxFor(model => model.CookTime)
  <br />

  @Html.LabelFor(model => model.ServingSize)
  @Html.TextBoxFor(model => model.ServingSize)
  <br />

  @Html.LabelFor(model => model.UrlLink)
  @Html.TextBoxFor(model => model.UrlLink)
  <br />



  <input type="submit" value="Add new recipe" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all recipes", "Index")</p>