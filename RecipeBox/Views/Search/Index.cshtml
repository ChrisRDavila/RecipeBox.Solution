@{
  Layout = "_Layout";
}

@using RecipeBox.Models;
<h2>@ViewBag.PageTitle</h2>

@if (@Model.Count == 0)
{
  <p>Your search returned no results. Please try again.</p>
}
else if (@ViewBag.SearchType == "categories")
{
  <div>
  @foreach (Category ctg in Model)
  {
    <div>@Html.ActionLink(ctg.Type, "Details", "Categories", new { id = ctg.CategoryId })</div>
  }
  </div>
}
else
{
  <div>
  @foreach (Recipe rcp in Model)
  {
    <div>@Html.ActionLink(rcp.Name, "Details", "Recipes", new { id = rcp.RecipeId })</div>
  }
  </div>
}
<div>
  <br /><br />
  <button>@Html.ActionLink("Add a Category", "Create", "Categories")</button>
  <button>@Html.ActionLink("Add a Recipe", "Create", "Recipes")</button>
  <button>@Html.ActionLink("Home", "Index", "Home")</button>
</div>